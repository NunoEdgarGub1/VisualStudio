<UserControl x:Class="GitHub.VisualStudio.UI.Views.Controls.GitHubPaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:GitHub.VisualStudio.UI.Views"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
  <DockPanel x:Name="Container">
    <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal">
      <TextBlock FontSize="14.7" Foreground="{DynamicResource VsBrush.WindowText}" Text="Pull Requests" />
      <Separator Margin="3,0,3,0" Style="{StaticResource VerticalSeparator}" />
      <TextBlock Foreground="{DynamicResource VsBrush.GrayText}" Text="List" />
    </WrapPanel>

    <Separator DockPanel.Dock="Top" />
    <view:PullRequestList />
  </DockPanel>
</UserControl>
